<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--suppress MybatisGenerateCustomPluginInspection -->
<generatorConfiguration>
    <properties url="file:C:\Users\yeeee\Desktop\generator.properties" />
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="useMapperCommentGenerator" value="true"/>

        <plugin type="vip.yeee.memo.integrate.custom.generate.service.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <property name="caseSensitive" value="false"/>
            <property name="forceAnnotation" value="false"/>
            <property name="generateColumnConsts" value="false"/>
            <property name="generateDefaultInstanceMethod" value="false"/>
            <!--<property name="beginningDelimiter" value="`"/>
            <property name="endingDelimiter" value="`"/>-->
            <!--使用 Data 时，Getter,Setter 无效-->
           <!-- <property name="lombok" value="Getter,Setter,Data,ToString,Accessors,EqualsAndHashCode"/>-->
            <property name="lombok" value="Data"/>
            <property name="swagger" value="false"/>

            <!--使用实际的字段名-->
            <property name="useActualColumnNames" value="true"/>
        </plugin>

        <!--通用代码生成器插件-->

<!--        &lt;!&ndash;测试输出单个文件，每个表都会生成一个对应的文件&ndash;&gt;
        <plugin type="vip.yeee.memo.integrate.custom.generate.service.TemplateFilePlugin">
            <property name="targetProject" value="generator/src/test/java"/>
            <property name="targetPackage" value="test.one"/>
            <property name="templatePath" value="generator/test-one.ftl"/>
            <property name="fileName" value="${tableClass.shortClassName}Test.txt"/>
            &lt;!&ndash;默认值是下面这个，可以不配置&ndash;&gt;
            <property name="templateFormatter"
                      value="vip.yeee.memo.integrate.custom.generate.service.formatter.FreemarkerTemplateFormatter"/>
        </plugin>-->
<!--        &lt;!&ndash;测试输出整个文件，所有表都可用，一次只生成一个文件，用于聚合所有表使用&ndash;&gt;
        <plugin type="vip.yeee.memo.integrate.custom.generate.service.TemplateFilePlugin">
            <property name="singleMode" value="false"/>
            <property name="targetProject" value="generator/src/test/java"/>
            <property name="targetPackage" value="test.all"/>
            <property name="templatePath" value="generator/test-all.ftl"/>
            <property name="fileName" value="All.txt"/>
        </plugin>-->

        <!--common____________mapper.xml-->
        <plugin type="vip.yeee.memo.integrate.custom.generate.service.TemplateFilePlugin">
            <property name="targetProject" value="${target.project}"/>
            <property name="targetPackage" value="${module.parent}.mapper"/>
            <property name="modelPackage" value="${module.parent}"/>
            <property name="templatePath" value="${template.path}/mapperXml.ftl"/>
            <property name="mapperSuffix" value="Mapper"/>
            <property name="fileName" value="${tableClass.shortClassName}${mapperSuffix}.xml"/>
        </plugin>
        <!--common____________Mapper.java-->
        <plugin type="vip.yeee.memo.integrate.custom.generate.service.TemplateFilePlugin">
            <property name="targetProject" value="${target.project}"/>
            <property name="targetPackage" value="${module.parent}.mapper"/>
            <property name="modelPackage" value="${module.parent}"/>
            <property name="templatePath" value="${template.path}/mapper.ftl"/>
            <property name="mapperSuffix" value="Mapper"/>
            <property name="fileName" value="${tableClass.shortClassName}${mapperSuffix}.java"/>
        </plugin>
        <!--common____________MapperImpl.java-->
        <plugin type="vip.yeee.memo.integrate.custom.generate.service.TemplateFilePlugin">
            <property name="targetProject" value="${target.project}"/>
            <property name="targetPackage" value="${module.parent}.mapper"/>
            <property name="modelPackage" value="${module.parent}"/>
            <property name="templatePath" value="${template.path}/mapperImpl.ftl"/>
            <property name="mapperSuffix" value="MapperImpl"/>
            <property name="fileName" value="${tableClass.shortClassName}${mapperSuffix}.java"/>
        </plugin>

        <jdbcConnection driverClass="${datasource.driverClassName}"
                        connectionURL="${datasource.url}"
                        userId="${datasource.username}"
                        password="${datasource.password}">
        </jdbcConnection>

        <!--MyBatis 生成器只需要生成 Model-->
        <javaModelGenerator targetPackage="${module.parent}.entity" targetProject="${target.project}"/>
        <table tableName="${table.name}" domainObjectName="${table.objectname}">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
    </context>
</generatorConfiguration>